<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://www.springframework.org/schema/aop
                           http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
                           http://www.springframework.org/schema/tx
                           http://www.springframework.org/schema/tx/spring-tx-2.0.xsd"
                           default-autowire="byName">
 
  
  
  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="locations">
       <list>
         <value>classpath:voyager.full.converter.properties</value> 
       </list>
    </property>
  </bean>
  
  <bean id="importerConfiguration"
	class="info.extensiblecatalog.OAIToolkit.importer.ImporterConfiguration"
  >
		<property name="sourceDir"><value>${sourceDir}</value></property> 
		<property name="destinationXmlDir"><value>${destinationXmlDir}</value></property> 
		<property name="destinationDir"><value>${destinationDir}</value></property> 
		<property name="errorDir"><value>${errorDir}</value></property> 
		<property name="errorXmlDir"><value>${errorXmlDir}</value></property> 
		<property name="logDir"><value>${logDir}</value></property> 
		<property name="needLogDetail"><value>${needLogDetail}</value></property>
		<property name="marcSchema"><value>${marcSchema}</value></property>
		<property name="marcEncoding"><value>${marcEncoding}</value></property> 
		<property name="splitSize"><value>${splitSize}</value></property> 
		<property name="translateLeaderBadCharsToZero"><value>${translateLeaderBadCharsToZero}</value></property> 
		<property name="translateNonleaderBadCharsToSpaces"><value>${translateNonleaderBadCharsToSpaces}</value></property>
      <property name="needConvert"><value>${needConvert}</value></property>
      <property name="needLoad"><value>${needLoad}</value></property>
      <property name="needModify"><value>${needModify}</value></property>
   </bean>
   
    
      
 
</beans>