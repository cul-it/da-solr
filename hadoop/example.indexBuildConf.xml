<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- copy this file to indexBuildConf.xml  and make your chanes -->
<!-- Put BibFileToSolr specific property overrides in this file. -->

<configuration>

<!-- Edit following value line. Set solr core name -->
<property>
	<name>BibFileToSolr.solrServiceUrl</name>
	<value>http://da-dev-solr.library.cornell.edu/solr/develop</value>
</property>

<!-- Edit following value line. Set the webdav password -->
<property>
	<name>BibFileToSolr.bibWebdavPassword</name>
	<value>YOURPASSWORDHERE</value>
</property>

 <property>
	<name>BibFileToSolr.inputDir</name>
	<value>inputDirX</value>
 </property>

<property>
	<name>BibFileToSolr.bibWebdavUrl</name>
	<value>http://culdata.library.cornell.edu/data/voyager/bib/bib.nt.full</value>
</property>

<property>
	<name>BibFileToSolr.bibWebdavUser</name>
	<value>admin</value>
</property>

<property>
	<name>BibFileToSolr.holdingServiceUrl</name>
	<value>http://da-ilayer.library.cornell.edu/DataIndexer/showTriplesLocation.do</value>
</property>


</configuration>
