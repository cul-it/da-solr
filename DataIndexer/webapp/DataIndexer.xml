<Context path="/DataIndexer"
   docBase="DataIndexer"
   debug="0"
   reloadable="false"
   crossContext="false"
   antiJARLocking="true"
   cachingAllowed="false"
>
   <!--
   <Logger className="org.apache.catalina.logger.FileLogger"
      directory="logs/DataIndexer"
      prefix="vivoharvester." suffix=".txt"
      timestamp="true"/>
   -->
   <!-- Disables restart persistence of sessions -->
   <Manager pathname=""/>
   <Resource name="jdbc/appDataSource"
      auth="Container"
      type="javax.sql.DataSource"
      maxActive="40"
      maxIdle="30"
      maxWait="10000"
      username="vivo"
      password="vivoadmin"
      driverClassName="com.mysql.jdbc.Driver"
      url="jdbc:mysql://localhost/dataindexer?autoReconnect=true"
      removeAbandoned="true"
      removeAbandonedTimeout="60"
      logAbandoned="false"
   />


</Context>

